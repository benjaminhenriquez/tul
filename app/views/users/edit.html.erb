<h1>Edit Your Information</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :value => @user.name %> <br />
  <%= f.label :email %>
  <%= f.text_field :email, :value => @user.email %> <br />
  <%= f.label :location %>
  <%= f.text_field :location, :value => @user.location %> <br />
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code, :value => @user.zip_code %> <br />
  <%= f.submit %>
<% end %>